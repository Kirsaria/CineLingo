                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="200" Height="300" Margin="10" BorderBrush="Gray" BorderThickness="1">
                                    <!-- Тот же шаблон, что и для A1 -->
