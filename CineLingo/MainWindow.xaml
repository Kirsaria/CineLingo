<Window x:Class="CineLingo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:CineLingo"
        mc:Ignorable="d"
        Title="CineLingo" 
        Height="350" 
        Width="825" 
        WindowStyle="None" 
        AllowsTransparency="True">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="10"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="#252B2B">
        <Border Background="#252B2B" VerticalAlignment="Top" Height="60" Grid.ColumnSpan="3" Margin="0,0,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#380F17" Direction="200" BlurRadius="10" ShadowDepth="5" Opacity="0.5" />
            </Border.Effect>
            <Grid VerticalAlignment="Top" Height="60">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">
                    <Button Content="Каталог" Foreground="#EFDFC5" Click="NavigateToCatalog" Margin="10,0" Padding="20 5" />
                    <Button Content="Словарь" Foreground="#EFDFC5" Click="NavigateToDictionary" Margin="10,0" Padding="20 5" />
                    <Button Content="Видеоплеер" Foreground="#EFDFC5" Click="NavigateToVideoPlayer" Margin="10,0" Padding="20 5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" Margin="0,0,20,0">
                    <Button x:Name="user" Style="{StaticResource UserStyle}" Click="UserButton_Click" Margin="10,0">
                        <Button.Background>
                            <ImageBrush ImageSource="/Images/user.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="hidewindow" Style="{StaticResource UserStyle}" Click="MinimizeButton_Click" Margin="10,0">
                        <Button.Background>
                            <ImageBrush ImageSource="/Images/hideWindow.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="fullscreen" Style="{StaticResource UserStyle}" Click="MaximizeButton_Click" Margin="10,0">
                        <Button.Background>
                            <ImageBrush ImageSource="/Images/fullScreen.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="exit" Style="{StaticResource UserStyle}" Click="ExitBtn_Click" Margin="10,0">
                        <Button.Background>
                            <ImageBrush ImageSource="/Images/closeWindow.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,60,0,0" />
    </Grid>
</Window>